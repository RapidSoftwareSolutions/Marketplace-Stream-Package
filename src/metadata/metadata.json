        {
          "name": "list",
          "type": "File",
          "info": "JSON file like [{'source':'user:1','target':'user:2'},{'source':'user:2','target':'user:1'}]. Create two follows. user:1 follows user:2, and user:2 follows user:1. 'user' - feed name, '1' - feed id",
          "required": true
        }
      ],
      "callbacks": [
        {
          "name": "error",
          "info": "Error"
